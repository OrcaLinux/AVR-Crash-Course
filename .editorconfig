# Root configuration for all files
root = true

# Global settings for all files
[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

# C Source and Header files
[*.{c,h}]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 100
insert_final_newline = true
end_of_line = lf

# Assembly files (AVR specific)
[*.{asm,S}]
indent_style = tab
tab_width = 8
insert_final_newline = true
end_of_line = lf

# Linker scripts
[*.ld]
indent_style = space
indent_size = 4
insert_final_newline = true

# Makefiles (Tabs required)
[Makefile]
indent_style = tab
tab_width = 8

# Keil Project and Configuration files
[*.{uvprojx,uvoptx}]
indent_style = space
indent_size = 4
insert_final_newline = true

# Eclipse Configuration files
[*.{project,cproject,settings}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Markdown and Documentation
[*.{md,txt}]
trim_trailing_whitespace = false
max_line_length = 120

# YAML/JSON Configuration (if used)
[*.{yaml,yml,json}]
indent_style = space
indent_size = 2
insert_final_newline = true
